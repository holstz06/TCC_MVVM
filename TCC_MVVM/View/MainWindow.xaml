                            <xctk:WatermarkTextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Watermark="Address Line 02" Text="{Binding Job.MailingAddress02, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Watermark="City" Text="{Binding Job.MailingCity, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="1" Watermark="State" Text="{Binding Job.MailingState, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" Watermark="Postal" Text="{Binding Job.MailingZip, Mode=TwoWay}"/>-->
                            
                            <!-- Premise Information Controls -->
                            <!--<Label Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Content="Premise Information" HorizontalContentAlignment="Center" FontSize="16" FontWeight="Bold"  />
                            <CheckBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Content="Contact Address is also Premise Address" IsChecked="{Binding PremiseEqualsMailing, Mode=TwoWay}" />
                            <xctk:WatermarkTextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="1" Watermark="Mileage" />
                            <xctk:WatermarkTextBox Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="1" Watermark="Price" />
                            <xctk:WatermarkTextBox Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Watermark="Address Line 01" Text="{Binding Job.PremiseAddress01, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" Watermark="Address Line 02" Text="{Binding Job.PremiseAddress02, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="6" Grid.Column="4" Grid.ColumnSpan="1" Watermark="City" Text="{Binding Job.PremiseCity, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="1" Watermark="State" Text="{Binding Job.PremiseState, Mode=TwoWay}"/>
                            <xctk:WatermarkTextBox Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="1" Watermark="Postal" Text="{Binding Job.PremiseZip, Mode=TwoWay}"/>-->
                            
                            <!-- Additional Information Controls -->
                            <!--<Label Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Content="Addition Information" FontSize="16" FontWeight="Bold"  />
                            <xctk:WatermarkTextBox Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Watermark="Contractor/Builder" />
                            <CheckBox Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Content="Include sales tax" />
                            <xctk:WatermarkComboBox Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="1" Watermark="Project Type" />-->
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!--========================================================================================
                                                        Room Information
            ==========================================================================================-->
            <TabItem Header="Rooms" Margin="-2,-2,0,0" Padding="7,7,7,7">
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <Grid Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width=".5*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Add Room" Command="{Binding AddRoomCommand}" BorderThickness="0,0,0,1" BorderBrush="Green" Background="White" Foreground="Green" />
                        <Button Grid.Row="0" Grid.Column="1" Content="Remove" Command="{Binding RemoveCommand}" CommandParameter="{Binding ElementName=RoomListView,Path=SelectedItem}" BorderThickness="0,0,0,1" BorderBrush="Red" Background="White" Foreground="Red" />
                        <ListView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Rooms}" x:Name="RoomListView" >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5,10,0,25">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="28" />
                                            <RowDefinition Height="28" />
                                            <RowDefinition Height="28" />
                                            <RowDefinition Height="28" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="250" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="15" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox ToolTip="Type in the name of the room." Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6" BorderBrush="#333" BorderThickness="0,0,0,1" Text="{Binding Room.RoomName}" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontWeight="Normal" FontSize="16" />
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Wood Color" />
                                        <ComboBox ToolTip="Select the default room color" Grid.Row="1" Grid.Column="2" SelectedItem="{Binding Room.ShelvingColor, Mode=TwoWay}" ItemsSource="{Binding Room.WoodColorValues}" />
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Strip Color" />
                                        <ComboBox ToolTip="Select the default strip color" Grid.Row="2" Grid.Column="2" SelectedItem="{Binding Room.StripColor, Mode=TwoWay}" ItemsSource="{Binding Room.StripColorValues}" />
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Shelving Depth" />
                                        <ComboBox ToolTip="Select the default room depth" Grid.Row="3" Grid.Column="2" SelectedItem="{Binding Room.ShelvingDepth, Mode=TwoWay}" ItemsSource="{Binding Room.ShelvingDepthValues}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!--========================================================================================
                                                        Strip Information
            ==========================================================================================-->
            <TabItem Header="Strip" Margin="-2,-2,0,0" Padding="7,7,7,7">
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <ItemsControl ItemsSource="{Binding Rooms}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,10,0,25">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="28" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="15" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox ToolTip="Type in the name of the room." Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="#333" BorderThickness="0,0,0,1" Text="{Binding Room.RoomName}" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontWeight="Normal" FontSize="16" />
                                    <!--<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" BorderBrush="#ccc" BorderThickness="0,0,0,0">
                                        <StackPanel Orientation="Vertical" Margin="0,15,0,15">
                                            <CheckBox Content="Same Color" FontWeight="Normal" ToolTip="When checked, all strip will be the same color" IsChecked="{Binding IsStripSameColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
                                        </StackPanel>
                                    </Border>-->
                                    <Label Grid.Row="2" Grid.Column="1" Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,0,0,1" Content="Color" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" Foreground="#333"/>
                                    <Label Grid.Row="2" Grid.Column="2"  Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,0,0,1" Content="Length" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" Foreground="#333"/>
                                    <Label Grid.Row="2" Grid.Column="3"  Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,0,0,1" />
                                    <ListView Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" ItemsSource="{Binding StripViewModel.Strips}" x:Name="StripListView" KeyboardNavigation.TabNavigation="Continue">
                                        <ListView.Resources>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0,0,0,0" />
                                                <Setter Property="FontFamily" Value="Calibri Light" />
                                                <Setter Property="FontSize" Value="14" />
                                                <Setter Property="IsSelected" Value="False" />
                                                <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                                <Setter Property="BorderThickness" Value="0,0,0,0" />
                                            </Style>
                                            <Style TargetType="ListView">
                                                <Setter Property="BorderThickness" Value="0,0,0,0" />
                                            </Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            </Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            </Style>
                                        </ListView.Resources>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="100" />
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox Grid.Column="0" ItemsSource="{Binding ColorValues}" SelectedItem="{Binding Color, Mode=TwoWay}" ToolTip="Select the color of the strip." />
                                                    <TextBox Grid.Column="1" Text="{Binding Length, Mode=TwoWay}" ToolTip="Type in the length of the strip." />
                                                    <TextBlock Grid.Column="2">
                                                        <Run Text="$" />
                                                        <Run Text="{Binding Price}" />
                                                    </TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <Button Grid.Row="4" Grid.Column="1" FontWeight="Normal" Background="White" BorderBrush="Green" BorderThickness="0,0,0,1" ToolTip="Add new strip to this room." FontSize="16" Content=" + " Command="{Binding Command_AddStrip, Mode=OneWay}" />
                                    <Button Grid.Row="4" Grid.Column="2" FontWeight="Normal" Background="White" BorderBrush="Red" BorderThickness="0,0,0,1" ToolTip="Remove selected strip" FontSize="18" Content=" - " Command="{Binding StripViewModel.RemoveCommand}" CommandParameter="{Binding ElementName=StripListView,Path=SelectedItem}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!--========================================================================================
                                                        Panel Information
            ==========================================================================================-->
            <TabItem Header="Panel" Margin="-2,-2,0,0" Padding="7,7,7,7">
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <ItemsControl ItemsSource="{Binding Rooms}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,10,0,25">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="28" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15" />
                                        <ColumnDefinition Width="104" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="15" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox ToolTip="Type in the name of the room." Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6" BorderBrush="#333" BorderThickness="0,0,0,1" Text="{Binding Room.RoomName}" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontWeight="Normal" FontSize="16" />
                                    <!--<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" BorderBrush="#ccc" BorderThickness="0,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,15,0,15">
                                            <CheckBox FontFamily="Calibri Light" FontSize="14" x:Name="cbIsSameColor" Margin="0,0,30,0" Content="Same Color" IsChecked="{Binding IsPanelSameColor, Mode=TwoWay}" ToolTip="When checked, all the panels will be the same color." />
                                            <CheckBox FontFamily="Calibri Light" FontSize="14" x:Name="cbIsSameDepth"  Content="Same Depth" IsChecked="{Binding IsPanelSameDepth, Mode=TwoWay}" ToolTip="When checked, all the panels will be the same depth." />
                                        </StackPanel>
                                    </Border>-->
                                    <Label Grid.Row="2" Grid.Column="1" Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,1,0,1" Content="Size Depth" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" Foreground="#333"/>
                                    <Label Grid.Row="2" Grid.Column="2" Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,1,0,1" Content="Size Height" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" Foreground="#333"/>
                                    <Label Grid.Row="2" Grid.Column="3" Background="#f8f8f8" BorderBrush="#ccc" BorderThickness="0,1,0,1" Content="Color" HorizontalContentAlignment="Center" FontFamily="Segoe UI Semibold" Foreground="#333"/>
